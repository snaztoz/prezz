<%# locals: (tenant:, group_shift:) %>

<%= form_with(model: [tenant, group_shift], class: "contents") do |form| %>
  <% if group_shift.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(group_shift.errors.count, "error") %> prohibited this group_shift from being saved:</h2>

      <ul class="list-disc ml-6">
        <% group_shift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :group_id %>
    <%= form.text_field :group_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": group_shift.errors[:group_id].none?, "border-red-400 focus:outline-red-600": group_shift.errors[:group_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :shift_id %>
    <%= form.text_field :shift_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": group_shift.errors[:shift_id].none?, "border-red-400 focus:outline-red-600": group_shift.errors[:shift_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
