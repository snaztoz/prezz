      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :tenant_id %>
    <%= form.text_field :tenant_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift_attendance.errors[:tenant_id].none?, "border-red-400 focus:outline-red-600": shift_attendance.errors[:tenant_id].any?}] %>
