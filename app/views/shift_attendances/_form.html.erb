  </div>

  <div class="my-5">
    <%= form.label :shift_occurence_id %>
    <%= form.text_field :shift_occurence_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift_attendance.errors[:shift_occurence_id].none?, "border-red-400 focus:outline-red-600": shift_attendance.errors[:shift_occurence_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :clock_in_at %>
    <%= form.datetime_field :clock_in_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift_attendance.errors[:clock_in_at].none?, "border-red-400 focus:outline-red-600": shift_attendance.errors[:clock_in_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :clock_out_at %>
