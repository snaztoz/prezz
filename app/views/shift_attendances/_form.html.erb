<%= form_with(model: [tenant, shift_attendance], class: "contents") do |form| %>
  <% if shift_attendance.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(shift_attendance.errors.count, "error") %> prohibited this shift_attendance from being saved:</h2>

      <ul class="list-disc ml-6">
        <% shift_attendance.errors.each do |error| %>
          <li><%= error.full_message %></li>
