<% content_for :title, "Home" %>

<div class="md:w-2/3 w-full space-y-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <section>
    <div class="p-4 border border-neutral-300 rounded space-y-2">
      <header class="flex items-center gap-2">
        <div class="p-1.5 bg-indigo-100 text-indigo-600 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar-days-icon lucide-calendar-days size-4"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/><path d="M8 14h.01"/><path d="M12 14h.01"/><path d="M16 14h.01"/><path d="M8 18h.01"/><path d="M12 18h.01"/><path d="M16 18h.01"/></svg>
        </div>
        <h2 class="text-sm font-medium text-neutral-600">Today Shift</h2>
      </header>
      <div class="space-y-2">
        <p class="text-4xl font-medium">08:00 - 17:00</p>
        <p class="text-neutral-700">Jumat, 7 Nov 2025</p>
      </div>
      <div class="mt-6 space-y-4">
      <!--
        <a href="#" class="inline-block w-full py-2 bg-indigo-600 hover:bg-indigo-700 focus:bg-indigo-700 transition-colors rounded text-center text-sm text-white font-medium">
          Clock-In
        </a> -->
        <div class="flex items-center gap-2 text-sm text-indigo-600 font-medium">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock-check-icon lucide-clock-check size-5"><path d="M12 6v6l4 2"/><path d="M22 12a10 10 0 1 0-11 9.95"/><path d="m22 16-5.5 5.5L14 19"/></svg>
          Clocked-in at 07:55
        </div>

        <a href="#" class="inline-block w-full py-2 bg-indigo-600 hover:bg-indigo-700 focus:bg-indigo-700 transition-colors rounded text-center text-sm text-white font-medium">
          Clock-Out
        </a>
      </div>
    </div>
  </section>

  <section class="grid grid-cols-3 gap-4">
    <div class="relative flex flex-col items-center gap-2 p-4">
      <p class="p-1 text-orange-600 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-history-icon lucide-history size-8"><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/><path d="M12 7v5l4 2"/></svg>
      </p>
      <a href="#" class="text-center text-sm font-medium">
        <span class="absolute inset-0"></span>
        Attendance Log
      </a>
    </div>

    <div class="relative flex flex-col items-center gap-2 p-4">
      <p class="p-1 text-sky-600 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users-round-icon lucide-users-round size-8"><path d="M18 21a8 8 0 0 0-16 0"/><circle cx="10" cy="8" r="5"/><path d="M22 20c0-3.37-2-6.5-4-8a5 5 0 0 0-.45-8.3"/></svg>
      </p>
      <a href="#" class="text-center text-sm font-medium">
        <span class="absolute inset-0"></span>
        My Team
      </a>
    </div>

    <div class="relative flex flex-col items-center gap-2 p-4">
      <p class="p-1 text-teal-600 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-send-icon lucide-send size-8"><path d="M14.536 21.686a.5.5 0 0 0 .937-.024l6.5-19a.496.496 0 0 0-.635-.635l-19 6.5a.5.5 0 0 0-.024.937l7.93 3.18a2 2 0 0 1 1.112 1.11z"/><path d="m21.854 2.147-10.94 10.939"/></svg>
      </p>
      <a href="#" class="text-center text-sm font-medium">
        <span class="absolute inset-0"></span>
        Shift Off
      </a>
    </div>
  </section>
</div>
