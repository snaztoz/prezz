<%= form_with(model: [@tenant, shift], class: "contents") do |form| %>
  <% if shift.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul class="list-disc ml-6">
        <% shift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:name].none?, "border-red-400 focus:outline-red-600": shift.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :start_time %>
    <%= form.time_field :start_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:start_time].none?, "border-red-400 focus:outline-red-600": shift.errors[:start_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :end_time %>
    <%= form.time_field :end_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:end_time].none?, "border-red-400 focus:outline-red-600": shift.errors[:end_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :recurrence_rule %>
    <%= form.text_field :recurrence_rule, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:recurrence_rule].none?, "border-red-400 focus:outline-red-600": shift.errors[:recurrence_rule].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :effective_from %>
    <%= form.date_field :effective_from, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:effective_from].none?, "border-red-400 focus:outline-red-600": shift.errors[:effective_from].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :effective_to %>
    <%= form.date_field :effective_to, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:effective_to].none?, "border-red-400 focus:outline-red-600": shift.errors[:effective_to].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
