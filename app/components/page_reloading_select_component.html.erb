<%= form_with(
  url: @url,
  method: :get,
  class: "w-full",
  data: {
    controller: "submit-on-change",
    submit_on_change_target: "form"
  }) do |f|
%>
  <%= f.select(
    @name,
    @options,
    {
      selected: @selected
    },
    class: "w-full px-4 py-2 border border-neutral-300 rounded-md shadow-xs text-sm",
    data: {
      action: "submit-on-change#submit"
    })
  %>
<% end %>
