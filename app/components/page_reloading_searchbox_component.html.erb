<%= form_with(
  url: @url,
  method: :get,
  class: "w-full relative",
  data: {
    controller: "submit-on-change",
    submit_on_change_target: "form",
    submit_on_change_timeout_duration_value: "300"
  }) do |f|
%>
  <%= f.label(@name, class: "absolute left-4 top-1/2 -translate-y-1/2 text-neutral-500") do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search-icon lucide-search size-4.5"><path d="m21 21-4.34-4.34"/><circle cx="11" cy="11" r="8"/></svg>
  <% end %>

  <%= f.text_field(
    @name,
    placeholder: @text,
    value: @value,
    class: "w-full min-h-9 pl-11 pr-4 py-1.5 border border-neutral-300 text-sm shadow-xs",
    data: {
      action: "submit-on-change#submit"
    })
  %>
<% end %>
